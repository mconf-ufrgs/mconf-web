<h3 class="dialog_title"><%= t('webconference.join_mobile.title', :room => @room.name) %></h3>

<div id="webconference_join_mobile_dialog">
  <div class="join-options">
    <a href="<%= @join_url %>"><%= t('webconference.join_mobile.direct_link').html_safe %></a><br><br/>
    <span><%= t('webconference.join_mobile.scan_code') %></span><br/>
    <img src="<%= qrcode_url(@qrcode_url) %>" class="qrcode"/><br/><br/>
    <span><%= t('webconference.join_mobile.sip_number', :number => @room.voice_bridge).html_safe %></span><br/>
  </div>

  <div class="download-mobile">
    <span><%= t('rooms.invite.mobile_details', :url => mobile_google_play_link).html_safe %></span>
    <%= link_to mobile_google_play_link do %>
      <%= image_tag mobile_google_play_image, :alt => t('rooms.invite.mobile_download'), :title => t('rooms.invite.mobile_download') %>
    <% end %>
  </div>
</div>
