<div id="footer-wrapper">
  <div id="footer">

    <div class="about-mconf float_right">
      <div class="logo-mconf">
      </div>
      <ul>
        <li><%= t('footer.find_us') %>:</li>
        <li><a href="http://mconf.org">http://mconf.org</a></li>
      </ul>
    </div>

  <div class="float_left links">
    <ul>
      <% unless current_site.external_help.blank? %>
        <li>
          <div id="support_select">
            <%= link_to(t('help'), current_site.external_help) %>
          </div>
        </li>
      <% end %>
      <li><%=link_to(t('feedback.send_us'), new_feedback_path(), :id => "feedback_link" )%></li>
    </ul>
  </div>

  <div class="clearer"></div>

  <div class="languages">
    <%= t('translate.change') %>:
    <% links = [] %>
    <% for locale in ["pt-br", "en"] -%>
      <% image_tag("flags/" + locale.to_s + ".png", :title=>locale.to_s) %>
      <% links << link_to(t('locales.' + locale.to_s), session_locale_path(:new_locale => locale.to_s), :method => :post) %>
    <% end -%>
    <%= links.join(" - ").html_safe %>
  </div>

  </div>
</div>
