<div id="register_div"  class="blue_title">
  <% if error_messages_for(:user).blank? %>
    <div id="lightbox-logo"><span><%= image_tag("mconf_logo_small.png",:class=>"icon")%><%=t('vcc_registration')%></span></div>
  <% end %>
  <%= error_messages_for :user %>
  <div class="form">
    <%= form_for user, :url => users_path do |f| -%>

      <%= render :partial => 'form', :locals => { :f => f } %>

      <%= f.text_field :special_event_id, :style => 'display:none' %>
      <% if current_site.use_recaptcha? %>
        <%= recaptcha_tags :display => {:theme => "clean"}, :public_key => current_site.recaptcha_public_key %>
      <% end %>
      <div class="button">
        <button type="submit" class="basic_button blue_button"><%=t("button.accept")%></button>
        <span>
          <%= link_to t("login.one"), login_path %>
        </span>
      </div>
      * <%= t('mandatory_field')%><br>
      <div><%= t('register.confirmation')%></div>
    <% end -%>
  </div>

</div>
